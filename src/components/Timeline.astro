---
import TimeEvent from "./TimeEvent.astro";

const imageUrls = [
  'https://picsum.photos/300/200?random=1',
  'https://picsum.photos/300/200?random=2',
  'https://picsum.photos/300/200?random=3',
  'https://picsum.photos/300/200?random=4',
  'https://picsum.photos/300/200?random=5',
  'https://picsum.photos/300/200?random=6',
  'https://picsum.photos/300/200?random=7',
  'https://picsum.photos/300/200?random=8',
  'https://picsum.photos/300/200?random=9', 
  'https://picsum.photos/300/200?random=10', 
  'https://picsum.photos/300/200?random=11', 
  'https://picsum.photos/300/200?random=12', 
  'https://picsum.photos/300/200?random=13', 
];
const timeline = [
  {time: "6 AM", color: "bg-blue-400"},
  {time: "8 AM", color: "bg-blue-400"},
  {time: "10 AM", color: "bg-blue-400"},
  {time: "12 PM", color: "bg-blue-400"},
  {time: "2 PM", color: "bg-blue-400"},
  {time: "4 PM", color: "bg-blue-400"},
  {time: "6 PM", color: "bg-blue-400"},
]
---
<ul class="flex flex-col gap-2 h-full overflow-y-auto overflow-x-hidden w-full no-scrollbar">
    {timeline.map((item, index) => (
      <TimeEvent client:load time={item.time} color={item.color} image={imageUrls[index]} index={index}/>
    ))}
</ul>