---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
---

<Layout>
	<div class="flex max-h-screen">
		<Sidebar />
		
		<main class="flex-1 p-6">
			<div class="dashboard-header">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
					<div class="bg-white p-6 rounded-lg shadow">
						<h3 class="text-lg font-semibold text-gray-700 mb-2">Total Analyses</h3>
						<p class="text-3xl font-bold text-gray-900">123</p>
					</div>
					<div class="bg-white p-6 rounded-lg shadow">
						<h3 class="text-lg font-semibold text-gray-700 mb-2">Recent Detections</h3>
						<p class="text-3xl font-bold text-gray-900">5</p>
					</div>
					<div class="bg-white p-6 rounded-lg shadow">
						<h3 class="text-lg font-semibold text-gray-700 mb-2">Accuracy Rate</h3>
						<p class="text-3xl font-bold text-gray-900">92%</p>
					</div>
				</div>
			</div>
		</main>
	</div>
</Layout>
